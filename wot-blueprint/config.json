{
  "devices": [
    {
      "id": "kaffee01",
      "name": "Kaffeemaschine",
      "properties": [
        {
          "name": "temperature",
          "start_value": 30
        },
        {
          "name": "coffee_counter",
          "start_value": 0
        },
        {
          "name": "coffee_ground",
          "start_value": 0
        }
      ],
      "methods": [
        {
          "id": "brew_coffee",
          "actions": [
            {
              "action": "set",
              "property": "temperature",
              "value": 99
            },
            {
              "action": "increment",
              "property": "coffee_counter",
              "value": 1
            },
            {
              "action": "trigger_event",
              "event": "coffee_brewed"
            },
            {
              "action": "condition",
              "condition":
                {
                  "property": "coffee_counter",
                  "operator": ">",
                  "value": 10
                  },
              "actions": [
                {
                  "action": "trigger_event",
                  "event": "coffee_ground_full"
                }
              ]
            }
          ]
        }
      ],
      "events": [
        "coffee_brewed"
      ]
    },
    {
      "id": "waschmaschine01",
      "name": "Waschmaschine"
    },
    {
      "id": "garagentür01",
      "name": "Garagentür"
    }
  ]
}